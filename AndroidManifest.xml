<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pl.pcd.alcohol"
          android:versionCode="11"
          android:versionName="@string/AppVersion">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="20"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--    <uses-permission android:name="android.permission.WAKE_LOCK"/>-->

    <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/AppTheme"
            android:hardwareAccelerated="true"
            android:allowBackup="true"
            >
        <!-- MAIN DATABASE -->

        <activity
                android:name=".ui.DB_MAIN_Activity"
                android:label="@string/alcohol_list"
                android:launchMode="singleTask"
                android:windowSoftInputMode="stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <!-- USER DATABASE -->

        <activity
                android:name=".ui.DB_USER_Activity"
                android:label="@string/my_proposals"
                android:launchMode="standard">
            <!--      android:parentActivityName=".ui.MainListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.MainListActivity"/>-->
        </activity>

        <!-- EDITOR -->

        <activity
                android:name=".ui.EditorActivity"
                android:label="@string/editor"
                android:parentActivityName=".ui.DB_USER_Activity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.UserListActivity"/>
        </activity>


        <!-- PREFERENCES -->

        <activity
                android:name=".ui.PrefsActivity"
                android:label="@string/settings"
                android:theme="@style/PreferenceScreen">
        </activity>

        <!--    LOGIN    -->

        <activity
                android:name=".ui.LoginActivity"
                android:label="@string/login_activity">
        </activity>
        <!--    PROFILE VIEWER    -->

        <activity
                android:name=".ui.ProfileViewActivity"
                android:label="@string/profile_title">
        </activity>

        <!--TODO: PROFILE EDITOR -->


        <!--    REGISTER    -->

        <activity
                android:name=".ui.RegisterActivity"
                android:label="@string/register_title">
        </activity>

        <!--    BUG REPORT    -->

        <activity
                android:name=".ui.ReportBugActivity"
                android:label="@string/pref_report_issue">
        </activity>

        <!--    ALCOHOL INFO    -->

        <activity
                android:name=".ui.AlcoholInfoActivity"
                android:label="@string/info">
        </activity>

        <!--    MORE RATINGS    -->

        <activity
                android:name=".ui.MoreRatingsActivity"
                android:label="@string/more_ratings_title">
        </activity>
    </application>
</manifest>
