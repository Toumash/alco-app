<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#ff485bef"/>
            <stroke
                    android:width="1dp"
                    android:color="#ff696d99"/>
            <corners
                    android:radius="6dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ff4356da"
                    android:endColor="#ff485bef"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#ff757599"/>
            <corners
                    android:radius="6dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>