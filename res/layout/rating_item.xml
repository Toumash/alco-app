<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rating_root">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/comment_author"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blahblahblah"
            android:id="@+id/comment_content"
            android:textSize="14sp"
            android:layout_gravity="left"
            android:layout_below="@+id/rating_rating"
            android:layout_alignLeft="@+id/rating_rating"
            android:layout_alignStart="@+id/rating_rating"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_below="@+id/comment_author"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014.07.25 21:23:33"
            android:id="@+id/comment_date"
            android:textSize="11sp"
            android:layout_gravity="right"
            android:layout_alignBottom="@+id/rating_rating"
            android:layout_toRightOf="@+id/rating_rating"
            android:layout_marginLeft="4dp"
            android:textColor="#ff848484"/>

</RelativeLayout>